import 'package:flutter_test/flutter_test.dart';
import 'package:flutter/material.dart';
import 'package:tu_app/main.dart';

void main() {
  testWidgets('Verificar contenido en la HomePage', (WidgetTester tester) async {
    await tester.pumpWidget(MyApp());

    expect(find.text('Página Principal'), findsOneWidget);
    expect(find.text('Contenido de la página principal'), findsOneWidget);
  });

  testWidgets('Navegación a la ProfilePage', (WidgetTester tester) async {
    await tester.pumpWidget(MyApp());

    // Abre el AppDrawer.
    await tester.tap(find.byTooltip('Open navigation menu'));
    await tester.pumpAndSettle();

    // Haz clic en el elemento de menú "Mi Perfil"
    await tester.tap(find.text('Mi Perfil'));
    await tester.pumpAndSettle();

    // Verifica que ahora estamos en la ProfilePage.
    expect(find.text('Mi Perfil'), findsOneWidget);
    expect(find.text('Promedio de Calificación'), findsOneWidget);
  });

  testWidgets('Verificar interacción con AlertDialog en AccountPage', (WidgetTester tester) async {
    await tester.pumpWidget(MyApp());

    // Abre el AppDrawer.
    await tester.tap(find.byTooltip('Open navigation menu'));
    await tester.pumpAndSettle();

    // Haz clic en el elemento de menú "Cuenta"
    await tester.tap(find.text('Cuenta'));
    await tester.pumpAndSettle();

    // Presiona el botón de "Eliminar cuenta"
    await tester.tap(find.text('Eliminar cuenta'));
    await tester.pumpAndSettle();

    // Verifica la presencia del AlertDialog y de la casilla "Acepto los términos y condiciones"
    expect(find.text('¿Estás seguro de que deseas eliminar tu cuenta?'), findsOneWidget);
    expect(find.byType(CheckboxListTile), findsOneWidget);
  });
}
