import 'package:flutter/material.dart';

class PaymentMethodsPage extends StatefulWidget {
  @override
  _PaymentMethodsPageState createState() => _PaymentMethodsPageState();
}

class _PaymentMethodsPageState extends State<PaymentMethodsPage> {
  List<String> paymentMethods = ['Tarjeta de débito', 'Tarjeta de crédito', 'Yape', 'Plin', 'Efectivo'];
  String selectedPaymentMethod = '';

  void addPaymentMethod(String method) {
    setState(() {
      selectedPaymentMethod = method;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Métodos de Pago'),
      ),
      body: Center(
        child: Column(
          children: [
            SizedBox(height: 20),
            Text(
              'Selecciona un método de pago:',
              style: TextStyle(fontSize: 18),
            ),
            SizedBox(height: 20),
            Column(
              children: paymentMethods
                  .map(
                    (method) => ListTile(
                      title: Text(method),
                      trailing: selectedPaymentMethod == method ? Icon(Icons.paid) : null,
                      onTap: () => addPaymentMethod(method),
                    ),
                  )
                  .toList(),
            ),
            SizedBox(height: 20),
            ElevatedButton(
              onPressed: () {
                if (selectedPaymentMethod.isNotEmpty) {
                  // Lógica para registrar el método de pago en tu aplicación
                  showDialog(
                    context: context,
                    builder: (_) => AlertDialog(
                      title: Text('Añadir Método de Pago'),
                      content: Text('Método de pago añadido'),
                      actions: [
                        TextButton(
                          child: Text('Aceptar'),
                          onPressed: () {
                            Navigator.pop(context);
                          },
                        ),
                      ],
                    ),
                  );
                } else {
                  showDialog(
                    context: context,
                    builder: (_) => AlertDialog(
                      title: Text('Añadir Método de Pago'),
                      content: Text('Método de pago rechazado'),
                      actions: [
                        TextButton(
                          child: Text('Aceptar'),
                          onPressed: () {
                            Navigator.pop(context);
                          },
                        ),
                      ],
                    ),
                  );
                }
              },
              child: Text('Añadir Método de Pago'),
            ),
          ],
        ),
      ),
    );
  }
}

void main() {
  runApp(MaterialApp(
    home: PaymentMethodsPage(),
  ));
}

